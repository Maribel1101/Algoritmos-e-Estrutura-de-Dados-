#include <stdio.h>
#include <stdlib.h>
struct pessoa { 
    char nome [50];
    int idade;
};
int main() {
    struct pessoa lista[3];
    
    for (int i = 0; i < 3; i++) {
        printf("digite o nome da pessoa %: ", i + 1);
        scanf("%s", lista[i] .nome);
        
        printf("digite a idade: ");
        scanf("%d", &lista[i].idade);
        
    }

    return 0;
}
